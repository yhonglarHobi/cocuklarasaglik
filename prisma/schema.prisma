// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. KULLANICILAR (Yazarlar, Adminler)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Şifrelenmiş olarak saklanacak
  role      Role     @default(USER)
  articles  Article[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  AUTHOR
  ADMIN
}

// 2. YAZILAR (Makaleler)
model Article {
  id          String   @id @default(cuid())
  slug        String   @unique // URL dostu başlık (ornek-yazi-basligi)
  title       String
  excerpt     String?  // Kısa özet
  content     String   // Makale içeriği (HTML/Markdown)
  imageUrl    String?  // Kapak görseli
  published   Boolean  @default(false)
  viewCount   Int      @default(0)
  source      String   @default("SYSTEM")
  originalUrl String?  // WordPress'teki tam URL (Referans ve 301 yönlendirme için)
  
  // SEO Alanları
  focusKeyword String?
  imageAltText String?
  seoScore     Int?     @default(0)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  feedbacks   ArticleFeedback[] // Relation to feedback history

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 2.1 GERİ BİLDİRİMLER (AI Eğitimi İçin)
model ArticleFeedback {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  
  rating    Int      // 0-100 Puan
  notes     String?  // "Daha samimi ol", "Görseli değiştir" vb.
  
  createdAt DateTime @default(now())
}


// 3. KATEGORİLER
model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  articles    Article[]
}

// 4. SİSTEM AYARLARI (Gemini API vs.)
model SystemSettings {
  id          String   @id @default("default") // Tek bir kayıt olacak
  apiKey      String?  // Gemini API Key
  systemPrompt String? // Yapay Zeka Talimatı
  
  // Analitik & SEO Kodları
  googleAnalyticsId   String?
  googleSearchConsole String?
  facebookPixelId     String?
  
  // Reklam Ayarları (Google AdSense)
  adsensePublisherId     String? // pub-xxxxxxxxxxxxxxxx
  adsenseSidebarSlotId   String? // Sidebar reklam birimi ID
  adsenseInArticleSlotId String? // Makale içi reklam birimi ID
  adsenseEnabled         Boolean @default(false)

  updatedAt   DateTime @updatedAt
}

// 5. MENÜ YÖNETİMİ
model MenuItem {
  id        String   @id @default(cuid())
  name      String
  href      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
